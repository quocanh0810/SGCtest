<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarmanhinhchinh"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#5BAF5E"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/menu_drawer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch thu gom"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                >
            </TextView>

        </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:text="Thành Phố/Tỉnh" />

        <Spinner
            android:id="@+id/spn_category"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Quận/Huyện" />

        <Spinner
            android:id="@+id/spn_category1"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Địa chỉ cụ thể" />

        <Spinner
            android:id="@+id/spn_category2"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Ngày thu gom" />

        <EditText
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:hint="Ngày/Tháng/Năm" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Giờ cụ thể" />

        <EditText
            android:id="@+id/tv_timer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Select Time"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Ghi chú" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đăng ký thu gom"
        android:textAllCaps="false"
        app:backgroundTint="#0F75BC" />
</LinearLayout>